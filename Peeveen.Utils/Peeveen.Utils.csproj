<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <!-- This will force moaning about undocumented public items -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <NuGetAuditMode>all</NuGetAuditMode>
		<Version>1.3.1</Version>
    <NuGetAuditLevel>moderate</NuGetAuditLevel>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

    <AssemblyTitle>Peeveen Utils</AssemblyTitle>
  </PropertyGroup>

  <!-- Allow certain warnings in Debug builds -->
  <PropertyGroup Condition="$(Configuration) == 'Debug'">
    <WarningsNotAsErrors>CS1591;S125;CMS0002</WarningsNotAsErrors>
  </PropertyGroup>

  <!-- References -->
  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="System.Text.Json" Version="9.0.8" />
  </ItemGroup>

  <!-- NuGet package settings -->
  <PropertyGroup>
    <PackageIcon>packageIcon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Description>Handy utilities for C# applications.</Description>
  </PropertyGroup>
  <ItemGroup>
    <None Include=".nuget/packageIcon.png" Pack="true" PackagePath="\" />
    <None Include="../README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>
